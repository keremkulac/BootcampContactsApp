<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.keremkulac.contactsapp.ui.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_contactRegistrationFragment"
            app:destination="@id/contactRegistrationFragment" />
        <action
            android:id="@+id/action_homeFragment_to_contactDetailFragment"
            app:destination="@id/contactDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/contactDetailFragment"
        android:name="com.keremkulac.contactsapp.ui.ContactDetailFragment"
        android:label="fragment_contact_detail"
        tools:layout="@layout/fragment_contact_detail" >
        <argument
            android:name="person"
            app:argType="com.keremkulac.contactsapp.data.Person" />
    </fragment>
    <fragment
        android:id="@+id/contactRegistrationFragment"
        android:name="com.keremkulac.contactsapp.ui.ContactRegistrationFragment"
        android:label="fragment_contact_registration"
        tools:layout="@layout/fragment_contact_registration" />
</navigation>